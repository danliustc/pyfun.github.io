---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" 
     xmlns:atom="http://www.w3.org/2005/Atom" 
     xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd" 
     xmlns:media="http://search.yahoo.com/mrss/"
     xmlns:dc="http://purl.org/dc/elements/1.1/"
     xmlns:content="http://purl.org/rss/1.0/modules/content/">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <description>{{ site.description | xml_escape }}</description>
    <link>{{ site.url }}{{ site.baseurl }}/</link>
    <atom:link href="{{ "/feed.xml" | absolute_url }}" rel="self" type="application/rss+xml" />
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <generator>Jekyll v{{ jekyll.version }}</generator>
    <language>{{ site.locale | default: "zh-CN" }}</language>
    <copyright>{{ site.time | date: "%Y" }} {{ site.author.name | xml_escape }}</copyright>
    <managingEditor>{{ site.author.email }} ({{ site.author.name | xml_escape }})</managingEditor>
    <webMaster>{{ site.author.email }} ({{ site.author.name | xml_escape }})</webMaster>
    <category>{{ site.description | xml_escape }}</category>
    <ttl>60</ttl>
    
    {%- assign feed_image_url = site.logo | default: site.author.avatar -%}
    {% if feed_image_url %}
    <image>
      <url>{{ feed_image_url }}</url>
      <title>{{ site.title | xml_escape }}</title>
      <link>{{ site.url }}{{ site.baseurl }}/</link>
      <width>144</width>
      <height>144</height>
    </image>
    <icon>{{ feed_image_url }}</icon>
    <itunes:image href="{{ feed_image_url }}"/>
    <itunes:author>{{ site.author.name | xml_escape }}</itunes:author>
    <itunes:summary>{{ site.description | xml_escape }}</itunes:summary>
    <itunes:owner>
      <itunes:name>{{ site.author.name | xml_escape }}</itunes:name>
      <itunes:email>{{ site.author.email }}</itunes:email>
    </itunes:owner>
    <itunes:category text="Technology"/>
    <itunes:explicit>no</itunes:explicit>
    <media:thumbnail url="{{ feed_image_url }}" />
    {% endif %}

    {% for post in site.posts limit:20 %}
      <item>
        <title>{{ post.title | xml_escape }}</title>
        <description>{{ post.content | strip_html | truncatewords: 50 | xml_escape }}</description>
        <content:encoded><![CDATA[{{ post.content }}]]></content:encoded>
        <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
        <link>{{ post.url | absolute_url }}</link>
        <guid isPermaLink="true">{{ post.url | absolute_url }}</guid>
        <dc:creator>{{ post.author | default: site.author.name | xml_escape }}</dc:creator>
        {% for tag in post.tags %}
        <category>{{ tag | xml_escape }}</category>
        {% endfor %}
        {% for cat in post.categories %}
        <category>{{ cat | xml_escape }}</category>
        {% endfor %}
        <comments>{{ post.url | absolute_url }}#disqus_thread</comments>
      </item>
    {% endfor %}
  </channel>
</rss> 